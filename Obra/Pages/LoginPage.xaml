<Page x:Class="Obra.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Obra.Pages"
      mc:Ignorable="d"
      Title="LoginPage" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Image Source="Logo1.png" />
            <TextBlock HorizontalAlignment="Center"></TextBlock>
            <TextBlock HorizontalAlignment="Center"></TextBlock>
            <TextBlock HorizontalAlignment="Center"></TextBlock>
            <TextBlock HorizontalAlignment="Center"></TextBlock>
            <TextBlock HorizontalAlignment="Center"></TextBlock>
            <TextBlock HorizontalAlignment="Center"></TextBlock>
            <TextBlock HorizontalAlignment="Center"></TextBlock>
            <TextBlock HorizontalAlignment="Center"> Identifiant</TextBlock>
            <TextBox Name="usernameBox"  HorizontalAlignment="Center" Width="100"></TextBox>
            <TextBlock HorizontalAlignment="Center"> Mot de Passe</TextBlock>
            <PasswordBox Name="PasswordBox"  HorizontalAlignment="Center" Width="100" ></PasswordBox>
            <TextBlock HorizontalAlignment="Center"></TextBlock>
            <Button Content="Se connecter" Background="LightSteelBlue" Name="log" Click="Login_Click" HorizontalAlignment="Center"></Button>
            <TextBlock HorizontalAlignment="Center"></TextBlock>
            <Button Content="Créer un compte particulier" Background="LightSteelBlue" Click="RegisterPart_Click" HorizontalAlignment="Center" ></Button>
            <Button Content="Créer un compte professionnel" Background="LightSteelBlue" Name="inscription" Click="RegisterPro_Click" VerticalAlignment="Center" HorizontalAlignment="Center"></Button>
            <Image x:Name="epita" Source="/Resources/Epita.png" Height="101" Width="88" RenderTransformOrigin="-3.504,-3.027">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-30.532"/>
                        <TranslateTransform X="-121.684" Y="242.481"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </StackPanel>
    </Grid>
</Page>
