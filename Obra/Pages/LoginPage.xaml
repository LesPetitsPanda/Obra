<Page x:Class="Obra.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Obra.Pages"
      mc:Ignorable="d"
      Title="LoginPage" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center"> Username</TextBlock>
            <TextBox Name="usernameBox"  HorizontalAlignment="Center" Width="100"></TextBox>
            <TextBlock HorizontalAlignment="Center"> Password</TextBlock>
            <PasswordBox Name="PasswordBox"  HorizontalAlignment="Center" Width="100" ></PasswordBox>
            <TextBlock HorizontalAlignment="Center"></TextBlock>
            <Button Content="Se connecter" Background="LightSteelBlue" Name="log" Click="login_Click"  VerticalAlignment="Center" HorizontalAlignment="Center"></Button>
            <Button Content="S'inscrire" Background="LightSteelBlue" Name="inscription" Click="register_Click" VerticalAlignment="Center" HorizontalAlignment="Center"></Button>
        </StackPanel>
    </Grid>
</Page>
