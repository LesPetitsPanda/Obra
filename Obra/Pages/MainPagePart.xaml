<Page x:Class="Obra.Pages.MainPagePart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Obra.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      ShowsNavigationUI="False"
      Title="MainPagePart" Background="#DDEAF7">
    <Grid Margin="0,0,0,0">
        <StackPanel Margin="715,5,0,400">
            <Button Content="Settings" Width="75" Height="31"/>
        </StackPanel>
        <StackPanel Margin=" 600,5,50,400">
            <Button Content="Messages" Width="75" Height="31"/>
        </StackPanel>
        <Border Margin="183,20,183,400" Padding="2" CornerRadius="15" Background="White" Width="275" Height="25">
            <TextBox TextWrapping="Wrap" Width="260" Height="20" BorderBrush="White"/>
        </Border>       
        <StackPanel Margin="-50,277,600,10">
            <Image Height="200" Width="184" Source="/Resources/Logo 2.png"/>
        </StackPanel>
        <StackPanel Margin="10,340,635,-35">
            <Image Height="120" Width="110" Source="/Resources/Obra2.png" RenderTransformOrigin="0.476,0.38"/>
        </StackPanel>
        <Button Height="100" Width="100" Click="Marteau">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="/Resources/Logo 1.png"/>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Page>
