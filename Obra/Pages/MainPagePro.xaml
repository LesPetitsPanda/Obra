<Page x:Class="Obra.Pages.MainPagePro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Obra.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      ShowsNavigationUI="False"
      xml:lang="en-US"
      Title="MainPagePro" Background="#DDEAF7">

    <Grid Margin="172,0,32,10">
        <Grid Margin="0,-43,32,166">
            <Viewbox>
                <Calendar Margin="45,30,0,0" Height="166" Width="300"/>
            </Viewbox>

        </Grid>


        <Grid Margin="50,274,50,10">
            <Label Margin="0,-34,0,0">Selected date:</Label>
            <TextBox Text="{Binding ElementName=cldSample, Path=SelectedDate, StringFormat=d, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,-64,0" Height="156" VerticalAlignment="Top"/>

        </Grid>
    </Grid>



</Page>
