<Page x:Class="Obra.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Obra.Pages"
      mc:Ignorable="d"
      Title="LoginPage" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="usernameBox"  HorizontalAlignment="Center" Width="70"></TextBox>
            <PasswordBox Name="PasswordBox"  HorizontalAlignment="Center" Width="70" ></PasswordBox>
            <Button Content="Se connecter" Name="log" Click="login_Click"  HorizontalAlignment="Center"></Button>
        </StackPanel>
        <TextBlock Height="20" HorizontalAlignment="Left" Margin="16,10,0,0" Name="textBlockHyperlink" VerticalAlignment="Top" Width="97" >
            <Hyperlink Click="registerEvent">
                <Run Text="Register"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
    
</Page>
